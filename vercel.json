{
  "framework": "nextjs",
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "functions": {
    "app/api/jobs/route.ts": {
      "maxDuration": 60,
      "includeFiles": "public/audio/textures/**"
    },
    "app/api/jobs/[id]/route.ts": {
      "maxDuration": 10
    },
    "app/api/download/[id]/[format]/route.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production",
    "MAX_FILE_SIZE": "104857600",
    "YOUTUBE_QUALITY": "highestaudio",
    "ENABLE_CLEANUP": "true",
    "CLEANUP_INTERVAL": "3600000"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}